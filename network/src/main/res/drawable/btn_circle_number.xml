<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval"> <!-- 圆形按钮 -->

    <!-- 背景颜色（示例为蓝色） -->
    <solid android:color="#4285F4" />

    <!-- 边框（可选） -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" />

    <!-- 阴影（可选） -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

    <!-- 文字颜色和大小（通过代码动态设置更灵活） -->
</shape>