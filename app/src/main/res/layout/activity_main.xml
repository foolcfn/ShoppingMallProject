<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.cfl.shoppingmallproject.ui.MainViewModel" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.MainActivity">

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/fragment_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rg_nativgtion"
            />
        
        <RadioGroup
            android:id="@+id/rg_nativgtion"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent">
            
            <RadioButton
                android:id="@+id/rb_recomment"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="首页"
                android:drawableTop="@drawable/recomment_button"
                style="@style/BottomRadioButton"
                android:layout_weight="1"
            />
            <RadioButton
                android:id="@+id/rb_classify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="分类"
                android:drawableTop="@drawable/recomment_button"
                style="@style/BottomRadioButton"
                android:layout_weight="1"
                />
            <RadioButton
                android:id="@+id/rb_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="购物车"
                android:drawableTop="@drawable/detail_button"
                style="@style/BottomRadioButton"
                android:layout_weight="1"
                />
            <RadioButton
                android:id="@+id/rb_user"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="我的"
                android:drawableTop="@drawable/user_buuton"
                style="@style/BottomRadioButton"
                android:layout_weight="1"
                />
        </RadioGroup>
        
            

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>